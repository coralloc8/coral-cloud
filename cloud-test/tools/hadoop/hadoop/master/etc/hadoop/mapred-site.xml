<!-- Put site-specific property overrides in this file. -->

<configuration>

    <property>
        <name>mapreduce.framework.name</name>
        <value>yarn</value>
        <description>The runtime framework for executing MapReduce jobs. Can be one of local, classic or yarn.
        </description>
        <final>true</final>
    </property>
    <property>
        <name>mapreduce.jobtracker.http.address</name>
        <value>sfserver-dev:50030</value>
    </property>
    <property>
        <name>mapreduce.jobhistory.address</name>
        <value>sfserver-dev:10020</value>
        <description>历史服务器的外部服务端口</description>
    </property>
    <property>
        <name>mapreduce.jobhistory.webapp.address</name>
        <value>sfserver-dev:19888</value>
    </property>
    <property>
        <name>mapred.job.tracker</name>
        <value>http://sfserver-dev:9001</value>
    </property>

<!--    &lt;!&ndash;历史服务器的MR相关日志文件存储，该值指向一个hdfs路径，下面两个配置也是&ndash;&gt;
    <property>
        <name>yarn.app.mapreduce.am.staging-dir</name>
        <value>/hisdata/staging</value>
    </property>

    &lt;!&ndash;已结束的MR-日志&ndash;&gt;
    <property>
        <name>mapreduce.jobhistory.done-dir</name>
        <value>/hisdata/done</value>
    </property>

    &lt;!&ndash; 正在进行的MR-日志 &ndash;&gt;
    <property>
        <name>mapreduce.jobhistory.intermediate-done-dir</name>
        <value>/hisdata/done_intermediate</value>
    </property>-->


</configuration>
